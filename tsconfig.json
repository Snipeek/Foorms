{
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "ES2021.String",
      "dom"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "dist"
  ]
}
